########################################################################################################################
#                                                       VARIABLE                                                       #
########################################################################################################################

SRCS	:=	main.cpp	\
			Weapon.cpp	\
			HumanA.cpp	\
			HumanB.cpp

SRCS_D	:=	srcs/

OBJS_D	:=	objs/

OBJS	:=	$(SRCS:%.cpp=$(OBJS_D)%.o)

HEAD	:=	Weapon.hpp	\
			HumanA.hpp	\
			HumanB.hpp

HEAD_D	:=	includes/

CFLAGS	:=	c++ -Wall -Wextra -Werror -std=c++98

BIN		:=	Violence

########################################################################################################################
#                                                        RULES                                                         #
########################################################################################################################

all:	$(BIN)

$(BIN):	$(OBJS_D) $(OBJS)
	$(CFLAGS) -o $(BIN) $(OBJS)

$(OBJS_D)%.o:	$(SRCS_D)%.cpp Makefile
			$(CFLAGS) -I$(HEAD_D) -c $< -o $@

$(OBJS_D)	:
			@mkdir -p $(OBJS_D)

########################################################################################################################
#                                                        COMMANDS                                                      #
########################################################################################################################

clean:
	$(RM) -r $(OBJS) $(OBJS_D)

fclean:	clean
	$(RM) $(BIN)

re:	fclean all

.PHONY:	all bonus clean fclean re